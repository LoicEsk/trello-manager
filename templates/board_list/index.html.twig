{% extends 'base.html.twig' %}

{% block title %}BoardList index{% endblock %}

{% block content %}
    <h1>BoardList index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Liste</th>
                <th>Tableau</th>
            </tr>
        </thead>
        <tbody>
        {% for board_list in board_lists %}
            <tr>
                <td><a href="{{ path('board_list_show', {'id': board_list.id}) }}">{{ board_list.name }}</a></td>
                <td><a href="{{ path('board_show', { id: board_list.board.id } ) }}">{{ board_list.board.name }}</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
